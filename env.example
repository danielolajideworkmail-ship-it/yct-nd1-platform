# ========================================
# YCT ND1 COMPUTER SCIENCE - ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in your actual values

# ========================================
# MAIN SUPABASE CONFIGURATION
# ========================================
# Your main Supabase project credentials
SUPABASE_URL=https://your-main-project-id.supabase.co
SUPABASE_ANON_KEY=your-main-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-main-service-role-key-here

# Main database connection string
DATABASE_URL=postgresql://postgres:your-password@db.your-main-project-id.supabase.co:5432/postgres

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=production
PORT=5000

# CORS configuration - your Vercel frontend URL
CORS_ORIGIN=https://your-vercel-app.vercel.app

# JWT secret for token signing (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-random

# ========================================
# COURSE DATABASE CREDENTIALS
# ========================================
# Add credentials for each course's Supabase project
# Course 1
COURSE_1_URL=https://your-course-1-project-id.supabase.co
COURSE_1_ANON_KEY=your-course-1-anon-key
COURSE_1_SERVICE_KEY=your-course-1-service-key

# Course 2
COURSE_2_URL=https://your-course-2-project-id.supabase.co
COURSE_2_ANON_KEY=your-course-2-anon-key
COURSE_2_SERVICE_KEY=your-course-2-service-key

# Course 3
COURSE_3_URL=https://your-course-3-project-id.supabase.co
COURSE_3_ANON_KEY=your-course-3-anon-key
COURSE_3_SERVICE_KEY=your-course-3-service-key

# Add more courses as needed...
# COURSE_N_URL=https://your-course-n-project-id.supabase.co
# COURSE_N_ANON_KEY=your-course-n-anon-key
# COURSE_N_SERVICE_KEY=your-course-n-service-key

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable features
ENABLE_ANONYMOUS_HUB=true
ENABLE_NOTIFICATIONS=true
ENABLE_GAMIFICATION=true
ENABLE_ANALYTICS=false

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=your-session-secret-here

# ========================================
# CORS CONFIGURATION
# ========================================
# Additional CORS settings
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
# File upload settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# ========================================
# PASSWORD POLICY
# ========================================
# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SYMBOLS=false

# ========================================
# SESSION CONFIGURATION
# ========================================
# Session settings
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ========================================
# LOGGING CONFIGURATION
# ========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# VALIDATION CONFIGURATION
# ========================================
# Input validation settings
VALIDATE_INPUT=true
SANITIZE_INPUT=true
MAX_INPUT_LENGTH=10000

# ========================================
# CACHE CONFIGURATION
# ========================================
# Cache settings
CACHE_ENABLED=true
CACHE_TYPE=memory
CACHE_TTL=3600

# ========================================
# COMPRESSION CONFIGURATION
# ========================================
# Response compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# ========================================
# SECURITY HEADERS
# ========================================
# Security header settings
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=default-src 'self'

# ========================================
# MONITORING CONFIGURATION
# ========================================
# Monitoring settings
MONITORING_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ========================================
# NOTIFICATION CONFIGURATION
# ========================================
# Notification settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_PUSH_ENABLED=false
NOTIFICATION_SMS_ENABLED=false

# ========================================
# FEATURE CONFIGURATION
# ========================================
# Feature toggles
FEATURE_ANONYMOUS_HUB=true
FEATURE_DISCUSSIONS=true
FEATURE_ASSIGNMENTS=true
FEATURE_LEADERBOARD=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=false
FEATURE_MAINTENANCE_MODE=false

# ========================================
# MAINTENANCE CONFIGURATION
# ========================================
# Maintenance mode settings
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
# Development settings
DEV_MODE=false
HOT_RELOAD=false
DEBUG_MODE=false
VERBOSE_LOGGING=false

# ========================================
# TESTING CONFIGURATION
# ========================================
# Testing settings
TEST_MODE=false
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_db
MOCK_EXTERNAL_SERVICES=false

# ========================================
# PERFORMANCE CONFIGURATION
# ========================================
# Performance settings
CLUSTER_MODE=false
WORKER_PROCESSES=1
MEMORY_LIMIT=512
CPU_LIMIT=1
